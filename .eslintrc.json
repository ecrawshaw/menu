{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "no-unused-vars": "off",
        "react/jsx-props-no-spreading": "off"
    },
    "globals": {
        "window": true,
        "document": true,
        "jest": true,
        "describe": true,
        "it": true,
        "expect": true,
        "beforeEach": true
    }
}
